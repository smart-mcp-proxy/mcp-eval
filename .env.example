# MCP Evaluation System Environment Configuration
# Copy this file to .env and adjust values as needed

# =============================================================================
# MCP Proxy Source Configuration
# =============================================================================

# Path to the MCPProxy source code repository
# Used for building the proxy binary and extracting git information
MCPPROXY_SOURCE_PATH=../mcpproxy-go

# =============================================================================
# Docker Configuration
# =============================================================================

# Docker test session ID (auto-generated if not set)
TEST_SESSION=test777-dind

# Port for MCPProxy test container
TEST_PORT=8081

# Port for metrics endpoint
METRICS_PORT=9091

# Log level for MCPProxy container (debug, info, warn, error)
LOG_LEVEL=info

# =============================================================================
# MCP Server Configuration
# =============================================================================

# Path to MCP servers configuration file for testing
MCP_SERVERS_CONFIG=./mcp_servers_test.json

# =============================================================================
# Build Configuration
# =============================================================================

# Force rebuild of MCPProxy binary (true/false)
BUILD_FORCE=false

# Use Go build cache for faster builds (true/false)
BUILD_CACHE=true

# =============================================================================
# API Configuration
# =============================================================================

# Anthropic API key for Claude SDK (required for baseline recording)
# Set this in your actual .env file or environment
ANTHROPIC_API_KEY=your_api_key_here

# =============================================================================
# Evaluation Configuration
# =============================================================================

# Default model for evaluation (used by Claude SDK)
DEFAULT_MODEL=claude-3-5-sonnet-20241022

# Temperature for deterministic testing
TEMPERATURE=0.0

# Permission mode for bypassing prompts during automated testing
PERMISSION_MODE=bypassPermissions

# =============================================================================
# Log Paths (for debugging and analysis)
# =============================================================================

# MCPProxy main log file (system-dependent)
# macOS: /Users/$USER/Library/Logs/mcpproxy/main.log
# Linux: ~/.local/share/mcpproxy/logs/main.log
MCPPROXY_MAIN_LOG_PATH=~/Library/Logs/mcpproxy/main.log

# MCPProxy server logs directory
MCPPROXY_SERVER_LOGS_DIR=~/Library/Logs/mcpproxy/

# =============================================================================
# Development Configuration
# =============================================================================

# Python path for development (usually src/ for this project)
PYTHONPATH=src

# Skip cleanup during development (true/false)
SKIP_CLEANUP=false

# Skip MCP config updates during development (true/false)
SKIP_CONFIG=false
