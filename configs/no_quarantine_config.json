{
  "version": "1.0",
  "server": {
    "host": "0.0.0.0",
    "port": 8080,
    "cors": {
      "enabled": true,
      "allowedOrigins": ["*"],
      "allowedMethods": ["GET", "POST", "PUT", "DELETE", "OPTIONS"],
      "allowedHeaders": ["*"],
      "allowCredentials": true
    },
    "logging": {
      "level": "info",
      "format": "json",
      "output": "stdout"
    }
  },
  "mcp": {
    "timeout": "30s",
    "maxConnections": 100,
    "retryAttempts": 3,
    "retryDelay": "5s"
  },
  "security": {
    "quarantine": {
      "enabled": true,
      "autoQuarantineNew": false,
      "blockQuarantinedCalls": true
    },
    "rateLimit": {
      "enabled": false,
      "requestsPerMinute": 60
    }
  },
  "storage": {
    "type": "file",
    "path": "/app/data/mcpproxy.db"
  },
  "mcpServers": [
    {
      "name": "everything-2",
      "protocol": "stdio",
      "command": "/usr/bin/docker",
      "args": [
        "run",
        "-i",
        "--rm",
        "mcp/everything"
      ],
      "enabled": true,
      "quarantined": false,
      "created": "2025-08-26T20:00:00.000000Z",
      "updated": "2025-08-26T20:00:00.000000Z"
    }
  ],
  "monitoring": {
    "enabled": true,
    "metricsPort": 9090
  }
}